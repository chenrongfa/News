<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="60dp">
    <FrameLayout
        android:layout_margin="@dimen/eight"
        android:layout_width="60dp"
        android:layout_height="60dp">
        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/ssdk_oks_ptr_ptr"
            android:id="@+id/iv_arrow"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <ProgressBar
            android:layout_gravity="center"
            android:indeterminateDuration="300"
            android:indeterminateBehavior="repeat"
            android:indeterminateDrawable="@drawable/pb_animation"
            android:id="@+id/pb_arrow"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
    </FrameLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
             android:layout_gravity="center"
            android:id="@+id/tv_refresh"
            tools:text="@string/refresh_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
             android:layout_gravity="center"
             android:layout_marginTop="20dp"
            android:id="@+id/tv_refresh_time"
            tools:text="@string/refresh_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>