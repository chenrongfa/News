<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <ImageView
            android:id="@+id/iv_icon"
            android:src="@drawable/news_pic_default"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
        <LinearLayout

            android:id="@+id/ll_serie_live"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/tv_serie"
                android:textColor="@color/white1"
                android:textSize="@dimen/font_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
             <TextView
                android:id="@+id/tv_serie_num"
                android:textColor="@color/white1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout

            android:id="@+id/ll_gym"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/tv_ht"
                android:textColor="@color/white1"
                android:textSize="@dimen/font_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
             <TextView
                android:id="@+id/tv_at"
                android:textColor="@color/white1"
                android:textSize="@dimen/font_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/tv_title"
                android:maxLines="1"
                android:textColor="@color/white1"
                android:background="@android:color/transparent"
                android:textSize="@dimen/font_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <ImageView
                    android:id="@+id/iv_isLive"
                    android:gravity="center"
                    android:scaleType="centerCrop"
                    android:layout_margin="10dp"
                    android:src="@drawable/head_global_icon_tag_live_video"
                    android:layout_width="40dp"
                    android:layout_height="20dp"/>
                <TextView
                    android:gravity="center"
                    android:id="@+id/tv_people_num"
                    android:layout_margin="10dp"
                    android:textColor="@color/white1"
                    android:drawableLeft="@drawable/live_icon_jiabin"
                    android:layout_width="50dp"
                    android:layout_height="20dp"/>
                <TextView
                    android:gravity="center"
                    android:textColor="@color/white1"
                    android:id="@+id/tv_hot_num"
                    android:layout_margin="10dp"
                    android:drawableLeft="@drawable/live_bar_icon_slideshow_hot"
                    android:layout_width="50dp"
                    android:layout_height="20dp"/>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_sources"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</LinearLayout>